<?php
require __DIR__ . "/db.php";

$result = $conn->query("SELECT id, title, isbn, author, category, quantity, publisher, date_published, cover, created_at 
                        FROM books ORDER BY created_at DESC");

$rows = [];
while ($row = $result->fetch_assoc()) {
    $row["coverUrl"] = $row["cover"] ? ("/LibraTrack/uploads/covers/" . $row["cover"]) : null;
    $rows[] = $row;
}

json_response(["ok" => true, "data" => $rows]);
